.message.clearfix
  .label
    %span.author
      = next_message.fb_user.name
      = fb_profile_pic next_message.fb_user.id, {:size => 'square' }
    %br/
    %span.date= next_message.created_at.strftime("%Y-%H-%m %H:%M")
  .body
    .arrow= image_tag '/images/arrow.gif', :size => '24x25'
    =raw sexy(next_message.body)